.swiper {
  width: 100%;
  height: 180px;
}

.section {
  margin-top: 15px;

}

.section .title {
  font-size: 16px;
  font-weight: bolder;
  padding: 10px;
}

.content-wrap {
  padding: 10px;
  display: flex;
  flex-direction: column;
  gap: 20px
}

.content-wrap .content-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 8px;
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 2px;
}


.content-item .item-title {
  font-size: 17px;
}

.content-item .item-price {
  color: rgb(244, 57, 57);
  font-size: 14px;
}

.item-opt {
  display: flex;
  align-items: center;
  gap: 5px;
  color: #5792ff;
  padding: 5px;
  border-radius: 5px;
}

.item-opt:hover {
  opacity: .8;
}

.bottom-swiper {
  width: 100%;
  height: 145px;
  padding: 10px;
}
